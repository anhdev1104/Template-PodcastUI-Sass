mixin menu-item(text, icon = '', href = '#')
    li.menu-item
        a.menu-link(href= href)
            if icon 
                case icon 
                    when 'icon-home'
                        include ../icons/_icon-home
                    when 'icon-chart'
                        include ../icons/_icon-chart
                    when 'icon-cube'
                        include ../icons/_icon-cube
                    when 'icon-play'
                        include ../icons/_icon-play
                    when 'icon-sub'
                        include ../icons/_icon-sub
                    when 'icon-discovery'
                        include ../icons/_icon-discovery
                    when 'icon-mic'
                        include ../icons/_icon-mic
                    when 'icon-team'
                        include ../icons/_icon-team
                    when 'icon-addUser'
                        include ../icons/_icon-addUser
                    when 'icon-medal'
                        include ../icons/_icon-medal

            span.menu-text= text

mixin toggle()
    label.toggle
        input(type="checkbox")
        .toggle-main 
            .toggle-spinner

mixin button(icon = false, title = 'Play Episode')
    button.button.button--primary 
        if icon
            include ../icons/_icon-play
        span= title

